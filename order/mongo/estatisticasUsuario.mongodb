use("ecomm-account");

findClient = db.accounts.find({name: "Lawrence Fry"})

use("ecomm-order");

db.orders.aggregate([
  {
    $match: {
      _id_client:findClient._id
    }
  },
  {
  $unwind: "$items"
  },
  {
    $group: {
      _id: 'items',
      totalSaleAmount: { $sum: { $multiply: [ "$items.price", "$items.qtdAdd" ] }}
    }
  }
])